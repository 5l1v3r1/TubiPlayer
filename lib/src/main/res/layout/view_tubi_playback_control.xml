<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:padding="25dp"
    android:gravity="bottom">


    <ImageButton
        android:id="@+id/view_tubi_play_control"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/transparent"
        android:src="@drawable/view_tubi_play_icon"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:layout_alignBottom="@+id/view_tubi_play_control"
        android:layout_alignTop="@+id/view_tubi_play_control"
        android:layout_toRightOf="@+id/view_tubi_play_control"
        android:gravity="center_vertical">

        <SeekBar
            android:id="@+id/view_tubi_play_progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:max="100"
            android:progress="50"/>

        <TextView
            android:id="@+id/view_tubi_play_progress_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/view_tubi_play_progress"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:textColor="@android:color/white"
            android:text="45:01/01:30:01"/>
        <ImageButton
            android:id="@+id/view_tubi_play_captions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/view_tubi_play_progress"
            android:layout_marginRight="15dp"
            android:layout_marginEnd="15dp"
            android:visibility="invisible"/>
    </RelativeLayout>
</RelativeLayout>