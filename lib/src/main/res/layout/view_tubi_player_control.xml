<?xml version="1.0" encoding="utf-8"?>


<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="23dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="The Frozen Ground"/>
        
        
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="right"
            android:layout_marginRight="20dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/tubi_tv_subtitles_off"/>
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/tubi_tv_quality_off"/>
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/tubi_tv_chromecast"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:gravity="center">


        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="fitCenter"
            android:background="@drawable/tubi_tv_rew_15"/>

        <ImageView
            android:id="@+id/view_tubi_controller_play_toggle_control"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="fitCenter"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:background="@drawable/tubi_tv_pause_large"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="fitCenter"
            android:background="@drawable/tubi_tv_fwd_15"/>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:gravity="bottom|center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/view_tubi_controller_margin"
        android:paddingRight="@dimen/view_tubi_controller_margin"
        android:visibility="visible">


        <!--<ImageButton-->
        <!--android:id="@+id/view_tubi_controller_play_toggle_control"-->
        <!--android:layout_width="@dimen/view_tubi_controller_play_toggle_size"-->
        <!--android:layout_height="@dimen/view_tubi_controller_play_toggle_size"-->
        <!--android:layout_alignParentBottom="true"-->
        <!--android:background="@android:color/transparent"-->
        <!--android:padding="@dimen/view_tubi_controller_play_padding"-->
        <!--android:scaleType="fitCenter"-->
        <!--android:src="@drawable/view_tubi_player_controller_play_ic"/>-->


        <!--<RelativeLayout-->
        <!--android:layout_width="0dp"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginLeft="@dimen/view_tubi_controller_seek_bar_layout_margin_left"-->
        <!--android:layout_marginTop="@dimen/view_tubi_controller_seek_bar_layout_margin_right"-->
        <!--android:layout_weight="1">-->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginBottom="26dp"
            android:orientation="horizontal">


            <TextView android:id="@+id/view_tubi_controller_elapsed_time"
                android:layout_width="42dp"
                android:layout_height="16dp"
                android:includeFontPadding="false"
                android:text="@string/view_tubi_controller_time_position_text_default"
                android:textColor="@android:color/white"
                android:textSize="@dimen/view_tubi_controller_text_size"/>


            <SeekBar
                android:id="@+id/view_tubi_controller_seek_bar"
                style="@style/TubiSeekBar"
                android:layout_width="501dp"
                android:layout_height="wrap_content"
                android:max="100"
                android:paddingBottom="@dimen/view_tubi_controller_seek_bar_padding_vertical"
                android:paddingLeft="@dimen/view_tubi_controller_seek_bar_padding_horizontal"
                android:paddingRight="@dimen/view_tubi_controller_seek_bar_padding_horizontal"
                android:paddingTop="@dimen/view_tubi_controller_seek_bar_padding_vertical"
                android:progress="50"/>

            <TextView
                android:id="@+id/view_tubi_controller_remaining_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="@string/view_tubi_controller_time_position_text_default"
                android:textColor="@android:color/white"
                android:textSize="@dimen/view_tubi_controller_text_size"/>

        </LinearLayout>


    </LinearLayout>

</FrameLayout>

