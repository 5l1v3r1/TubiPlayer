<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/view_tubi_controller_height"
              android:layout_alignParentBottom="true"
              android:layout_gravity="bottom"
              android:background="@drawable/view_tubi_player_controller_bar_bg"
              android:gravity="top"
              android:orientation="horizontal"
              android:paddingLeft="@dimen/view_tubi_controller_margin"
              android:paddingRight="@dimen/view_tubi_controller_margin"
              android:visibility="visible">

    <ImageButton
        android:id="@+id/view_tubi_controller_play_toggle_control"
        android:layout_width="@dimen/view_tubi_controller_play_toggle_size"
        android:layout_height="@dimen/view_tubi_controller_play_toggle_size"
        android:layout_alignParentBottom="true"
        android:background="@android:color/transparent"
        android:padding="@dimen/view_tubi_controller_play_padding"
        android:scaleType="fitCenter"
        android:src="@drawable/view_tubi_player_controller_play_ic"/>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/view_tubi_controller_seek_bar_layout_margin_left"
        android:layout_marginTop="@dimen/view_tubi_controller_seek_bar_layout_margin_right"
        android:layout_weight="1">

        <SeekBar
            android:id="@+id/view_tubi_controller_play_progress"
            style="@style/TubiSeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="50"
            android:paddingBottom="@dimen/view_tubi_controller_seek_bar_padding_vertical"
            android:paddingLeft="@dimen/view_tubi_controller_seek_bar_padding_horizontal"
            android:paddingRight="@dimen/view_tubi_controller_seek_bar_padding_horizontal"
            android:paddingTop="@dimen/view_tubi_controller_seek_bar_padding_vertical"/>

        <TextView
            android:id="@+id/view_tubi_controller_play_progress_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/view_tubi_controller_time_position_layout_margin_left"
            android:layout_marginTop="@dimen/view_tubi_controller_time_position_layout_margin_top"
            android:includeFontPadding="false"
            android:text="@string/view_tubi_controller_time_position_text_default"
            android:textColor="@android:color/white"
            android:textSize="@dimen/view_tubi_controller_text_size"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/view_tubi_controller_options_layout_margin_right"
            android:layout_marginTop="@dimen/view_tubi_controller_options_layout_margin_top"
            android:orientation="horizontal">

            <ToggleButton
                android:id="@+id/view_tubi_controller_captions_button"
                style="@style/TubiEmptyToggleButton"
                android:layout_marginRight="@dimen/view_tubi_controller_options_captions_button_margin_right"
                android:background="@drawable/view_tubi_player_controller_captions_btn"
                android:visibility="visible"/>

            <ToggleButton
                android:id="@+id/view_tubi_controller_video_quality_button"
                style="@style/TubiEmptyToggleButton"
                android:background="@drawable/view_tubi_player_controller_hd_ic"/>

        </LinearLayout>

    </RelativeLayout>

    <ImageView
        android:id="@+id/audio_button"
        style="@style/TubiVideoButton"
        android:src="@drawable/view_tubi_player_controller_mute_ic"/>

    <ImageView
        android:id="@+id/information_button"
        style="@style/TubiVideoButton"
        android:src="@drawable/view_tubi_player_controller_information_ic"/>

</LinearLayout>
